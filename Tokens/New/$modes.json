{
  "$schema": "https://tokens.studio/schemas/6.0/schema.json",
  "modes": {
    "Brand": {
      "description": "Select brand variant",
      "values": ["Default", "Brand2"]
    },
    "Theme": {
      "description": "Select color theme",
      "values": ["Light", "Dark"]
    },
    "Spacing": {
      "description": "Select density/spacing mode",
      "values": ["Default", "Compact", "Spacious"]
    }
  },
  "modeMapping": {
    "Default/Light/Default": {
      "brand": "01_Brand/Default",
      "theme": "03_Themes/Light",
      "spacing": "02_Layout",
      "description": "Default brand, light theme, base spacing"
    },
    "Default/Light/Compact": {
      "brand": "01_Brand/Default",
      "theme": "03_Themes/Light",
      "spacing": "04_Responsive/Compact",
      "description": "Default brand, light theme, compact spacing"
    },
    "Default/Light/Spacious": {
      "brand": "01_Brand/Default",
      "theme": "03_Themes/Light",
      "spacing": "04_Responsive/Spacious",
      "description": "Default brand, light theme, spacious spacing"
    },
    "Default/Dark/Default": {
      "brand": "01_Brand/Default",
      "theme": "03_Themes/Dark",
      "spacing": "02_Layout",
      "description": "Default brand, dark theme, base spacing"
    },
    "Default/Dark/Compact": {
      "brand": "01_Brand/Default",
      "theme": "03_Themes/Dark",
      "spacing": "04_Responsive/Compact",
      "description": "Default brand, dark theme, compact spacing"

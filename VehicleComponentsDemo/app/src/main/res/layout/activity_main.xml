<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_surface_tertiary"
    android:padding="@dimen/spacing_24"
    tools:context=".MainActivity">

    <!-- Vehicle Component Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/componentCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_24"
        app:cardCornerRadius="@dimen/border_radius_8"
        app:cardBackgroundColor="@color/color_surface_primary"
        app:cardElevation="@dimen/spacing_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_24"
            android:gravity="center_horizontal">

            <!-- Revert Icon -->
            <ImageView
                android:id="@+id/revertIcon"
                android:layout_width="@dimen/icon_size_large"
                android:layout_height="@dimen/icon_size_large"
                android:src="@drawable/ic_revert"
                android:contentDescription="Revert icon"
                android:layout_marginBottom="@dimen/spacing_16"
                android:tint="@color/color_text_primary" />

            <!-- Tires Heading - Typography heading-80: fontSize 36, lineHeight 48, letterSpacing from token, fontFamily from brand -->
            <TextView
                android:id="@+id/tiresHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tires"
                android:textColor="@color/color_text_primary"
                android:textSize="@dimen/font_size_36"
                android:lineSpacingExtra="@dimen/line_height_48"
                android:letterSpacing="@string/typography_heading_80_letter_spacing"
                android:layout_marginBottom="@dimen/spacing_16"
                android:fontFamily="@string/typography_heading_80_font_family" />

            <!-- Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp">

                <!-- Bar Info Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="0dp"
                    android:minHeight="@dimen/line_height_32">

                    <!-- Label - Using brand primary primary color -->
                    <TextView
                        android:id="@+id/labelText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Low Tire Pressure"
                        android:textColor="@color/color_brand_primary_primary"
                        android:textSize="@dimen/font_size_24"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="@string/typography_heading_80_letter_spacing" />

                    <!-- Value - Using brand primary primary color -->
                    <TextView
                        android:id="@+id/valueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65%"
                        android:textColor="@color/color_brand_primary_primary"
                        android:textSize="@dimen/font_size_24"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="end"
                        android:letterSpacing="@string/typography_heading_80_letter_spacing" />
                </LinearLayout>

                <!-- Progress Bar Container -->
                <FrameLayout
                    android:id="@+id/progressBarContainer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_16"
                    android:layout_marginTop="@dimen/spacing_4"
                    android:layout_marginBottom="@dimen/spacing_16"
                    android:background="@drawable/progress_bar_background"
                    android:padding="@dimen/spacing_4">

                    <!-- Progress Bar Fill -->
                    <View
                        android:id="@+id/progressBarFill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/progress_bar_fill"
                        android:layout_gravity="start|center_vertical" />
                </FrameLayout>

                <!-- Replacement Due Text - Typography body-100: fontSize 20, lineHeight 32, letterSpacing from token, fontFamily from brand -->
                <TextView
                    android:id="@+id/replacementText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Replacement Due: #,### mi"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/font_size_20"
                    android:lineSpacingExtra="@dimen/line_height_32"
                    android:letterSpacing="@string/typography_body_100_letter_spacing"
                    android:fontFamily="@string/typography_body_100_font_family" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

